successi<-length(centri)
successi/tiri*76*3                    
integrate(f,1,4)
plot(x[centri],y[centri],
col="red",cex=0.3)   
points(x[-centri],y[-centri],
col="blue",cex=0.3)  
curve(f,add=T)		
@
